\NeedsTeXFormat{LaTeX2e}
\ProvidesPackage{conan}[2015/01/17 Conversation Analysis Formatting]

\RequirePackage{xstring}
\RequirePackage{calc}
\RequirePackage{kvoptions}
\RequirePackage{setspace}

\DeclareBoolOption{tt}
\DeclareBoolOption{singlebracket}
\DeclareBoolOption{linenumbers}
\DeclareStringOption[1]{spacing}[1]

\ProcessKeyvalOptions*


\newlength\@SpeakerWidth%
\newcounter{@SimulCnt}
\newcounter{conanline}
\setcounter{conanline}{1}%

\newenvironment{conan}[1][A]%
{\noindent%
	\ignorespaces%
	\setlength\@SpeakerWidth{\widthof{#1:}}%
	\refstepcounter{equation}%
	\begin{spacing}{\conan@spacing}%
	\begin{list}{(\theequation)}{%
		\setlength{\listparindent}{0pt}%
		\def\makelabel##1{##1\hfil}%  % put labels flushleft in space available
	}%
	\item \begin{minipage}[t]{\linewidth}}
{\end{minipage}%
	\end{list}%
	\end{spacing}%
	\setcounter{conanline}{1}%
	\par\noindent%
	\ignorespacesafterend}
	
\newenvironment{conan*}[1][A]%
{\noindent%
	\ignorespaces%
	\setlength\@SpeakerWidth{\widthof{#1:}}%
	\begin{spacing}{\conan@spacing}%
	\begin{list}{}{%
		\setlength{\listparindent}{0pt}%
		\def\makelabel##1{##1\hfil}%  % put labels flushleft in space available
	}%
	\item }
{\end{list}%
	\end{spacing}%
	\setcounter{conanline}{1}%
	\par\noindent%
	\ignorespacesafterend}
	
\newcommand{\@lineNo}{\ifconan@linenumbers\scriptsize\theconanline & \fi}

\newenvironment{@vartab}[1]
{\ifconan@linenumbers%
	\begin{tabular}[t]{@{}r@{ }p{\@SpeakerWidth}@{ }*{#1}{l@{ }l@{ }}l@{}}%
\else%
	\begin{tabular}[t]{@{}p{\@SpeakerWidth}@{ }*{#1}{l@{ }l@{ }}l@{}}%
\fi}
{\end{tabular}}

\newcommand{\@simulline}[1]{{%
\StrSubstitute{#1}{[}{\string& [}[\x]%
\StrSubstitute{\x}{]}{\string& ]}[\x]%
\tokenize{\x}{\x}%
\expandafter}\x}

\newcommand{\@simullineA}[1]{{%
\StrSubstitute{#1}{[}{\string& \string~}[\x]%
\StrSubstitute{\x}{]}{\string& \string~}[\x]%
\tokenize{\x}{\x}%
\expandafter}\x}

\newcommand{\@simullineB}[1]{{%
\StrSubstitute{#1}{[}{\string& \string\raisebox{0.7em}{[}}[\x]%
\StrSubstitute{\x}{]}{\string& \string\raisebox{0.7em}{]}}[\x]%
\tokenize{\x}{\x}%
\expandafter}\x}

\newcommand{\@simultab}[5]{%
\begin{@vartab}{#5}
\@lineNo \IfStrEq{#1}{}{}{#1:} & \@simulline{#2}\stepcounter{conanline}\\
\@lineNo \IfStrEq{#3}{}{}{#3:} & \@simulline{#4}\stepcounter{conanline}
\end{@vartab}\newline
}

\newcommand{\@simultabSingle}[5]{%
\begin{@vartab}{#5}
\@lineNo \IfStrEq{#1}{}{}{#1:} & \@simullineA{#2}\stepcounter{conanline}\\[-0.5em]
\@lineNo \IfStrEq{#3}{}{}{#3:} & \@simullineB{#4}\stepcounter{conanline}
\end{@vartab}\newline
}

\newcommand{\simul}[4]{\ifconan@tt\ttfamily\fi%
\StrCount{#2}{[}[\@SimulCntA]
\StrCount{#2}{]}[\@SimulCntB]
\setcounter{@SimulCnt}{\@SimulCntA}
\addtocounter{@SimulCnt}{\@SimulCntB}
\ifconan@singlebracket%
	\@simultabSingle{#1}{#2}{#3}{#4}{\the@SimulCnt}%
\else%
	\@simultab{#1}{#2}{#3}{#4}{\the@SimulCnt}%
\fi%
} 

\newcommand{\alone}[2]{\ifconan@tt\ttfamily\fi%
\ifconan@linenumbers%
	\begin{tabular}[t]{@{}r@{ }p{\@SpeakerWidth}@{ }l}%
\else%
	\begin{tabular}[t]{@{}p{\@SpeakerWidth}@{ }l}%
\fi%
\@lineNo \IfStrEq{#1}{}{}{#1:} & #2\stepcounter{conanline}
\end{tabular}\newline%
}

